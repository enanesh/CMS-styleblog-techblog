{{#each posts as |post| }}

<div class=" pt-4 dark:bg-purple-00 dark:text-gray-400">
    <div class="container  bg-purple-100 max-w-4xl px-10 py-6 mx-auto rounded-lg shadow-sm dark:bg-purple-900">

        
        <div class="flex items-center justify-between">
            <a rel="href" href="/post/{{post.id}}"
                class="px-2 py-1 font-bold rounded dark:bg-violet-400 dark:text-gray-900">{{format_date post.createdAt}}   {{format_time post.createdAt}}</a>
        </div>
        <div class="mt-3">
            <a rel="href" href="/post/{{post.id}}" class="text-2xl font-bold hover:underline">{{post.title}}</a>
            <p class="mt-2">{{post.content}}</p>
        </div>


        <div class="flex items-center justify-between mt-4">
            <a rel="href" href="/post/{{post.id}}" class="hover:underline dark:text-violet-400"></a>
            <div>
                <a rel="href" href="/post/{{post.id}}" class="flex items-center">
                    <img src="https://source.unsplash.com/50x50/?portrait" alt="avatar"
                        class="object-cover w-10 h-10 mx-4 rounded-full dark:bg-gray-500">
                    <span class="hover:underline dark:text-gray-400">{{post.user.username}}</span>
                </a>
            </div>
        </div>
    </div>
</div>



{{/each}}
